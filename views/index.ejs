<body class="bg-info text-white">
  <div class='container'>
    <h1 class="display-3 text-center py-3">Subscribe</h1>

    <!-- subscription Form -->
      <form id='subscription-form' class="w-50 p-3 mx-auto">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter Email">
        </div>
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <div class="g-recaptcha" data-sitekey="6LepVDQUAAAAAKxAApNyqKRF_nbNQ53B_JPwhhzP"></div>
        </div>
        <button type="submit" class="btn btn-default" style="cursor: pointer;">Submit</button>
    </form>
  </div>




  <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="5" role="dialog" aria-labelledby="exampleModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModal" style="color: gray">reCAPTCHA Passed</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="modalBody" class="modal-body" style="color: gray">
          <!-- <p id="modalBody" style="color: gray"></p>  -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="reload()" style="cursor: pointer;">OK</button>
        </div>
      </div>
    </div>
